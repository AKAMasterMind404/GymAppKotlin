<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp">

    <TextView
        android:id="@+id/tvJoinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Join In Doer"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvSignUpSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Hop right in!"
        android:layout_below="@+id/tvJoinTitle"
        android:textSize="18dp"
        android:textColor="@color/grey"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSignUpSub"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        android:minHeight="60dp" />

    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:minHeight="60dp" />

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRegisterEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:minHeight="60dp" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Now"
        android:layout_below="@+id/etRegisterPassword"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingVertical="15dp"
        android:text="Next" />

</RelativeLayout>