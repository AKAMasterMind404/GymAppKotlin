<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/tvJoinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Join In Doer"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvSignUpSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJoinTitle"
        android:text="Let's Hop right in!"
        android:textColor="@color/grey"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/register_userIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvSignUpSub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic1" />

    <TextView
        android:text="(Tap to change Icon)"
        android:id="@+id/helper_text_profile"
        android:layout_below="@+id/register_userIcon"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helper_text_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:drawableTint="@color/lightgrey"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        android:minHeight="60dp" />

    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawableTint="@color/lightgrey"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:minHeight="60dp" />

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRegisterEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawableTint="@color/lightgrey"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:minHeight="60dp" />

    <TextView
        android:id="@+id/login_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRegisterPassword"
        android:layout_toStartOf="@+id/btLogin"
        android:layout_marginTop="5dp"
        android:text="Already Have an Account? "
        android:textAllCaps="false" />

    <TextView
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRegisterPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:text="Login Here!"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingVertical="15dp"
        android:text="Next" />

</RelativeLayout>