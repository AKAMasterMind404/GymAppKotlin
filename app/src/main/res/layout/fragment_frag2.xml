<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".frag2">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp" />

    <TextView
        android:text="First Name:"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:layout_below="@id/user_icon"
        android:id="@+id/helper_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_icon"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/helper_firstName"
        android:text="Name"
        android:textSize="18sp" />

    <TextView
        android:text="Last Name:"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:layout_below="@id/helper_firstName"
        android:id="@+id/helper_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Surname"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:layout_toEndOf="@id/helper_lastName"
        android:layout_below="@id/firstName"
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="Email:"
        android:layout_marginBottom="20dp"
        android:id="@+id/helper_email"
        android:textSize="18sp"
        android:layout_below="@id/helper_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helper_lastName"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/helper_email"
        android:text="name@gmail.com"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/helper_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helper_email"
        android:layout_marginBottom="20dp"
        android:text="Height:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/helper_height"
        android:text="155cm"
        android:textSize="18sp" />

    <TextView
        android:text="Weight:"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:layout_below="@id/helper_height"
        android:id="@+id/helper_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="70kg"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:layout_toEndOf="@id/helper_weight"
        android:layout_below="@id/helper_height"
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/dashboard_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:text="Dashboard" />

</RelativeLayout>